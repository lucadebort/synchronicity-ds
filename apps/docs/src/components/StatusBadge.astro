    border-radius: 8px;
    border-left: 3px solid var(--badge-color);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.25rem 0.75rem;
    background: var(--sl-color-gray-6);
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .status-emoji {
    font-size: 1rem;
  }

  .status-label {
    color: var(--badge-color);
  }

  .version-info {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.875rem;
  }

  .version-label {
    color: var(--sl-color-gray-3);
    font-weight: 500;
  }

  .version-number {
    color: var(--sl-color-text);
    font-family: var(--sl-font-mono);
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .status-badge-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
